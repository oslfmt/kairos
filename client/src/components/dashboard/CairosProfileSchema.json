{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CairosProfile",
  "description": "A profile containing both client and freelancer profiles, the latter being optional",
  "type": "object",
  "properties": {
    "name": {
      "description": "Profile username",
      "type": "string"
    },
    "gender": {
      "description": "user gender",
      "type": "string"
    },
    "clientProfile": {
      "description": "Profile details strictly related to client profile",
      "type": "object",
      "properties": {
        "affiliations": {
          "description": "A list of the organizations the client identifies belonging to",
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "description": {
          "description": "description of client",
          "type": "string"
        }
      }
    },
    "freelancerProfile": {
      "description": "Profile details related to the freelancer profile",
      "type": "object",
      "properties": {
        "description": {
          "description": "Freelancer description",
          "type": "string"
        },
        "university": {
          "description": "university that freelancer goes to",
          "type": "string"
        },
        "studentEmail": {
          "description": "Email of student freelance",
          "type": "string"
        },
        "majors": {
          "description": "List of majors the freelancer is pursuing",
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "skills": {
          "description": "List of skills freelancer has",
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      }
    }
  },
  "required": ["name"]
}