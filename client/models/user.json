{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/schemas/user.json",
  "title": "KairosProfile",
  "description": "A user profile containing both client and freelancer profiles. Freelancer profile is added when the user creates one. Everyone has a client account by default",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "description": "Profile username",
      "type": "string"
    },
    "clientProfile": {
      "description": "Profile details strictly related to client profile",
      "type": "object",
      "properties": {
        "affiliations": {
          "description": "A list of the organizations the client identifies belonging to",
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "maxItems": 10,
          "uniqueItems": true
        },
        "description": {
          "description": "description of client",
          "type": "string"
        },
        "jobs": {
          "description": "jobs the client has posted, completed, or are in-progress",
          "type": "array",
          "items": {
            "$ref": "/schemas/job.json"
          },
          "uniqueItems": true,
          "maxItems": 1000
        }
      }
    },
    "freelancerProfile": {
      "description": "Profile details related to the freelancer profile",
      "type": "object",
      "properties": {
        "description": {
          "description": "Freelancer description",
          "type": "string"
        },
        "affiliations": {
          "description": "A list of the organizations the client identifies belonging to",
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true,
          "maxItems": 10
        },
        "skills": {
          "description": "List of skills freelancer has",
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "maxItems": 20
        },
        "jobs": {
          "description": "jobs the freelancer is working on, applied for, or completed",
          "type": "array",
          "items": {
            "$ref": "/schemas/job.json"
          },
          "uniqueItems": true,
          "maxItems": 1000
        }
      }
    }
  }
}